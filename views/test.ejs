<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebSocket Test</title>
    <style>
        #messages {
            border: 1px solid black;
            height: 200px;
            overflow-y: scroll;
            padding: 5px;
        }
    </style>
</head>
<body>
    <h1>WebSocket Test</h1>
    <div id="messages"></div>
    <input type="text" id="input" placeholder="Type your message...">
    <button id="send">Send</button>

    <script>
        const messages = document.getElementById('messages');
        const input = document.getElementById('input');
        const send = document.getElementById('send');

        const websocket = new WebSocket('ws://localhost:3001/ws/generate');

        websocket.onopen = (event) => {
            console.log(event)
            messages.innerHTML += '<p>Connected to WebSocket.</p>';
        };

        websocket.onmessage = (event) => {
            console.log(event)
            messages.innerHTML += '<p>Received: ' + event.data + '</p>';
            messages.scrollTop = messages.scrollHeight;
        };

        websocket.onclose = () => {
            messages.innerHTML += '<p>WebSocket closed.</p>';
        };

        websocket.onerror = (error) => {
            messages.innerHTML += '<p>Error: ' + error + '</p>';
        };

        send.onclick = () => {
            const message = input.value.trim();
            if (message) {
                websocket.send(message);
                input.value = '';
            }
        };

        input.onkeypress = (event) => {
            if (event.key === 'Enter') {
                send.click();
            }
        };
    </script>
</body>
</html>
